{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "hearth-web": {
      "transformGroup": "js",
      "transforms": ["name/ti/camel", "attribute/cti"],
      "files": [
        {
          "format": "javascript/es6",
          "destination": "tokens/colors.ts",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "tokens/colors.d.ts",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "format": "javascript/es6",
          "destination": "tokens/typography.ts",
          "filter": {
            "attributes": {
              "category": "typography"
            }
          }
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "tokens/typography.d.ts",
          "filter": {
            "attributes": {
              "category": "typography"
            }
          }
        },
        {
          "format": "javascript/es6",
          "destination": "tokens/font.ts",
          "filter": {
            "attributes": {
              "category": "font"
            }
          }
        },
        {
          "format": "typescript/es6-declarations",
          "destination": "tokens/font.d.ts",
          "filter": {
            "attributes": {
              "category": "font"
            }
          }
        }
      ]
    }
  }
}